<p id=""></p>

<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class="col-md-3">

      <!--Userinfo-->
      <%= render 'books/userinfo', user: @user %>
      <!--Userinfoここまで-->


　　　<!--投稿フォーム-->
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @books, local:true do |f| %>
        
        <div class="error_explanation">
          <% if @books.errors.any? %>
            <h3><%= @books.errors.count %> error prohibited this obj from being saved:</h3>
            <ul>
              <% @books.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>  
        </div>
      
        <div class="form-group">
          <%= f.label :title %><br />
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <%= f.label :opinion%><br />
          <%= f.text_area :opinion %>
        </div>
        <div class="form-group">
          <%= f.submit "Create Book", class: 'btn btn-success' %>
        </div>
      <% end %>
      <!--投稿フォームここまで-->
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detai</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %><br />
              <%= link_to user_path do %>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.opinion %></td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path(@book), class: 'btn btn-success' %>
              <% end %>
            </td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book), method: :delete, class: 'btn btn-danger', "data-confirm" => "Are you sure？" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>