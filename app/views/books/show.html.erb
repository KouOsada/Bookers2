<p id="notice"></p>

<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class="col-md-3">

      <!--Userinfo-->
      <%= render 'books/userinfo', user: @user %>
      <!--Userinfoここまで-->


　　　<!--投稿フォーム-->
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @books, local:true do |f| %>
        <div class="form-group">
          <%= f.label :title %><br />
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <%= f.label :opinion%><br />
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit "Create Book", class: 'btn btn-success' %>
        </div>
      <% end %>
      <!--投稿フォームここまで-->
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
                <%= attachment_image_tag @book.user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg" %>
              <% end %><br />
              <%= link_to user_path(@book.user.id) do %>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path(@book), class: 'btn btn-success' %>
              <% end %>
            </td>
            <td>
              <% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book), method: :delete, class: 'btn btn-danger', "data-confirm" => "Are you sure？" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>