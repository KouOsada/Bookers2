<p id="notice"></p>

<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class="col-md-3">

      <!--Userinfo-->
      <%= render 'books/userinfo', user: @user %>
      <!--Userinfoここまで-->


　　　<!--投稿フォーム-->
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
      
        
      
        <div class="form-group">
          <%= f.label :title %><br />
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <%= f.label :opinion%><br />
          <%= f.text_area :opinion %>
        </div>
        <div class="form-group">
          <%= f.submit "Create Book", class: 'btn btn-success' %>
        </div>
      <% end %>
      <!--投稿フォームここまで-->
    </div>

　　<!--一覧表示　-->
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <% @books.each do |book| %>
        <tbody>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %></td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.opinion %></td>
          </tr>
        <tbody>
        <% end %>
      </table>
    </div>
    <!--一覧表示ここまで-->

  </div>
</div>