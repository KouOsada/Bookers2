<h2>User info</h2>

<table>
  <tr><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></tr>
  <tr>
	  <th>name</th>
	  <th><%= current_user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= current_user.introduction %></th>
  </tr>
</table>






<h2>New book</h2>

<%= form_with model: @book, local:true do |f| %>
  <div>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :opinion%><br />
    <%= f.text_area :opinion %>
  </div>
  <div>
    <%= f.submit "Create Book" %>
  </div>
<% end %>


<table>

  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 10, 10, fallback: "no_image.jpg" %></td>
        <td><%= link_to book.title %></td>
        <td><%= book.opinion %></td>
      </tr>
    <tbody>
  <% end %>

</table>