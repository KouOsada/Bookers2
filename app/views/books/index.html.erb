<p id="notice"></p>

<div class='container px-5 px-sm-0'>
  <div class='row'>

    <!--Userinfo-->
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
        <tr><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></tr>
        <tr>
	        <th>name</th>
	        <th><%= current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
	        <th><%= current_user.introduction %></th>
        </tr>
      </table>

      <div class="row">
        <a class="btn btn-outline-secondary btn-block fas fa-user-cog" href="/users/edit"></a>
      </div>
      <!--Userinfoここまで-->
      

　　　<!--投稿フォーム-->
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
        <div class="form-group">
          <%= f.label :title %><br />
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <%= f.label :opinion%><br />
          <%= f.text_area :opinion %>
        </div>
        <div class="form-group">
          <a class="btn btn-success" href="/books/create">Create book</a>
        </div>
      <% end %>
    </div>
    <!--投稿フォームここまで-->
    
    
　　<!--一覧表示　-->
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <% @books.each do |book| %>
        <tbody>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 10, 10, fallback: "no_image.jpg" %></td>
            <td><%= link_to book.title %></td>
            <td><%= book.opinion %></td>
          </tr>
        <tbody>
        <% end %>
      </table>
    </div>
    <!--一覧表示ここまで-->

  </div>
</div>