<p id="notice"></p>

<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class="col-md-3">

      <!--Userinfo-->
      <%= render 'books/userinfo', user: @user %>
      <!--Userinfoここまで-->


　　　<!--投稿フォーム-->
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
        <div class="form-group">
          <%= f.label :title %><br />
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <%= f.label :opinion%><br />
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit "Create Book", class: 'btn btn-success' %>
        </div>
      <% end %>
      <!--投稿フォームここまで-->
    </div>

    <!--ユーザ投稿一覧-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <% @books.each do |book| %>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <tbody>
        <% end %>
      </table>
    </div>
    <!--ユーザ投稿一覧ここまで-->

  </div>
</div>