<div class="container">
  <div class="col-xs-12">
    <% if @model == "user" %>
      <h2>Users serach for '<%= @content %>'</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Introduction</th>
          </tr>
        </thead>
        <% @records.each do |user| %>
          <tbody>
            <tr>
              <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %></td>
              <td><%= link_to user.name, user_path(user.id) %></td>
              <td><%= user.introduction %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    <% elsif @model == "book" %>
      <h2>Books search for '<%= @content %>'</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <% @records.each do |book| %>
          <tbody>
            <tr>
              <td><%= attachment_image_tag(book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg") %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    <% end %>
  </div>
</div>